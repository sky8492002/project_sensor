<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="showRecordViewModel"
            type="com.choi.sensorproject.ui.ShowRecordViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.choi.sensorproject.opngl.CustomGLSurfaceView
            android:id="@+id/surfaceView"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:background="@drawable/room"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/time_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf= "@id/surfaceView"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            app:show_record_ui_state="@{showRecordViewModel.uiState}"/>

        <TextView
            android:id="@+id/angle_textView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="각도: "
            android:textSize="40sp"
            app:layout_constraintTop_toBottomOf="@+id/surfaceView"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>