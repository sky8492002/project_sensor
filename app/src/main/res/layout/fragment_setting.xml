<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="manageAppInfoViewModel"
            type="com.choi.sensorproject.ui.viewmodel.ManageAppInfoViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/daynight_day"
        android:padding="20dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/app_info_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/navigate_button"
            android:orientation="vertical" />

        <Button
            android:id="@+id/navigate_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintBottom_toTopOf="@+id/image_test_buton"
            android:text="화면 이동"/>

        <Button
            android:id="@+id/image_test_buton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="이미지 저장 테스트"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>